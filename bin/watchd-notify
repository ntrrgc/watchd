#!/usr/bin/python2
import socket

def pub():
    sock = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
    try:
        sock.connect('/tmp/watchd.sock')
        sock.send('CHANGE\n')
    except socket.error:
        # Silently ignore (the server is off, so there are no subscribers)
        return
    finally:
        sock.close()

if __name__ == "__main__":
    pub()
